@model TEST_APP_MVC.Models.Customer
@using System.Web.Optimization
@using System.Web
@{
    ViewBag.Title = "PlaceOrder";


}
@{


    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}
<br />
